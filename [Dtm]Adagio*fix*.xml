<map proto="1.3.2">
<name>Adagio</name>
<version>1.0</version>
<objective>Destroy the other team's monuments.</objective>
<authors>
<author contribution="Aesthetics, Gameplay ideas and XML.">Timothee38</author>
<author contribution="Building, Gameplay ideas and Feedback.">Runomo</author>
</authors>
<contributors>
    <contributor contribution="Xml Fixing">lord_creeper01</contributor>
</contributors>
<kits>
<kit name="spawn">
<item slot="0">diamond sword</item>
<item slot="1" enchantment="dig speed:7;arrow infinite:1">bow</item>
<item slot="2" enchantment="dig speed:1">iron pickaxe</item>
<item slot="3">diamond axe</item>
<item slot="4" amount="64">steak</item>
<item slot="5" amount="32" damage="1">log</item>
<item slot="6" amount="32">glass</item>
<item slot="7">golden apple</item>
<item slot="28">arrow</item>
</kit>
</kits>
<teams>
<team color="yellow" max="16">Yellow Team</team>
<team color="pink" max="16">Pink Team</team>
</teams>
 <spawns>
<spawn team="yellow" kit="spawn" yaw="90">
<cuboid min="139,24,-1" max="148,24,-10"/>
</spawn>
<spawn team="pink" kit="spawn" yaw="-90">
<cuboid min="16,24,-11" max="8,24,-2"/>
</spawn>
<default yaw="180">
<cuboid min="76,15,49" max="80,15,52"/>
</default>
</spawns>
<filters>
<filter name="no-void" parents="allow-all">
<deny>
<void/>
</deny>
</filter>
<filter name="no-breakSB" parents="deny-blocks">
<block>mob spawner</block>
<block>beacon</block>
</filter>
<filter name="only-iron" parents="allow-blocks">
<block>iron block</block>
</filter>
<filter name="monument-protection-pink">
<any>
<not>
<all>
<team>pink</team>
<block>emerald block</block>
<block>gold block</block>
<block>redstone block</block>
<block>coal block</block>
</all>
</not>
<team>yellow</team>
</any>
</filter>
<filter name="monument-protection-yellow">
<any>
<not>
<all>
<team>yellow</team>
<block>emerald block</block>
<block>gold block</block>
<block>redstone block</block>
<block>coal block</block>
</all>
</not>
<team>pink</team>
</any>
</filter>
</filters>
<regions>
<cuboid name="pinkmonA" min="42,9,18" max="42,11,18"/>
<cuboid name="pinkmonB" min="42,9,-31" max="42,11,-31"/>
<cuboid name="yellowmonA" min="114,9,-31" max="114,11,-31"/>
<cuboid name="yellowmonB" min="114,9,18" max="114,11,18"/>
<cuboid name="pink-portal" min="19,24,-5" max="19,25,-7"/>
<cuboid name="yellow-portal" min="137,24,-7" max="137,25,-7"/>
<apply block="no-void">
<negative name="no-void">
<rectangle min="-5,28" max="163,-41"/>
</negative>
</apply>
<apply block="only-iron" message="You may not break or place anything else then iron blocks here.">
<union>
<rectangle name="pinkspawn" min="32,28" max="-3,-45"/>
<rectangle name="yellowspawn" min="124,-41" max="164,32"/>
</union>
</apply>
<union name="monuments-pink">
<region name="pinkmonA"/>
<region name="pinkmonB"/>
</union>
<union name="monuments-yellow">
<region name="yellowmonA"/>
<region name="yellowmonB"/>
</union>
<apply block="monument-protection-pink" message="You may not break your own monument!">
<region name="monuments-pink"/>
</apply>
<apply block="monument-protection-yellow" message="You may your own monument!">
<region name="monuments-yellow"/>
</apply>
</apply>
<apply block="no-breakSB" message="You may not break this block!">
<rectangle min="-5,28" max="163,-41"/>
</apply>
</regions>
<portals>
<portal x="@121" y="@5" z="@-6" yaw="@90">
<region name="yellow-portal"/>
</portal>
<portal x="@35" y="@5" z="@-6" yaw="@-90">
<region name="pink-portal"/>
</portal>
</portals>
 
        <maxbuildheight>35</maxbuildheight>
 
        <blockdrops>
                <rule>
                        <region>
                                <region name="monuments-pink"/>
								<region name="monuments-yellow"/>
                        </region>
                        <filter>
                                <block>emerald block</block>
                        </filter>
                        <replacement>
                                <item>gold block</item>
                        </replacement>
                </rule>
                <rule>
                        <region>
                                <region name="monuments"/>
                        </region>
                        <filter>
                                <block>gold block</block>
                        </filter>
                        <replacement>
                                <item>redstone block</item>
                        </replacement>
                </rule>
                <rule>
                        <region>
                                <region name="monuments"/>
                        </region>
                        <filter>
                                <block>redstone block</block>
                        </filter>
                        <replacement>
                                <item>coal block</item>
                        </replacement>
                </rule>
        </blockdrops>
 
        <destroyables name="Monument A" materials="coal block" completion="100%">
                <destroyable owner="pink">
                   <region name="pinkmonA"/>
                </destroyable>
                <destroyable owner="yellow">
                   <region name="yellowmonA"/>
                </destroyable>
        </destroyables>
 
        <destroyables name="Monument B" materials="coal block" completion="100%">
                <destroyable owner="pink">
                   <region name="pinkmonB"/>
                </destroyable>
                <destroyable owner="yellow">
                   <region name="yellowmonB"/>
                </destroyable>
        </destroyables>
<itemremove>
                <item>log</item>
                <item>wood</item>
                <item>steak</item>
                <item>glass</item>
                <item>golden apple</item>
                <item>diamond sword</item>
                <item>arrows</item>
                <item>iron pickaxe</item>
                <item>diamond axe</item>
                <item>bow</item>
				<item>emerald block</item>
				<item>gold block</item>
				<item>redstone block</item>
				<item>coal block</item>
        </itemremove>
 <toolrepair>
<tool>diamond sword</tool>
<tool>bow</tool>
<tool>diamond axe</tool>
<tool>iron pickaxe</tool>
</toolrepair>
<timelock>on</timelock>
</map>
